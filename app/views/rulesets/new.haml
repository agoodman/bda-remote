- content_for(:html_title) { "New Ruleset" }

- content_for(:nav) do
  %ul.list-unstyled
    %li= link_to 'Home', home_path

- content_for(:sidebar) do
  %h4 Actions
  %ul.list-unstyled
    %li= link_to "Cancel", rulesets_path

%section
  %h1 New Ruleset

  = form_for @ruleset do |f|
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :summary
      = f.text_area :summary, class: 'form-control'
    .form-group= f.submit "Create Ruleset", class: 'form-control'
